@model NewCRUDModel
@{
    //page title
    ViewBag.PageTitle = T("Plugins.Misc.NewCRUD.NewCRUD").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Users List");
}

@{
    Layout = "_AdminLayout";
}

<form asp-controller="NewCRUD" asp-action="Create" method="post" id="category-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Misc.NewCRUD.Add.User")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Misc.NewCRUD.BackToUserList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Misc.NewCRUD/Views/_CreateOrUpdate.cshtml",Model)
</form>