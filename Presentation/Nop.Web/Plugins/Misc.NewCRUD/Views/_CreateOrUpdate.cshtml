@model NewCRUDModel
<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
@{
    const string hideInfoBlockAttributeName = "CategoryPage.HideInfoBlock";
    var user = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(user, hideInfoBlockAttributeName);

}
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <nop-cards id="category-cards">
                <nop-card asp-name="category-info" asp-icon="fas fa-info" asp-title="@T("Plugins.Misc.NewCRUD.User.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">@await Html.PartialAsync("~/Plugins/Misc.NewCRUD/Views/_CreateOrUpdate.Info.cshtml", Model)</nop-card>
            </nop-cards>
        </div>
    </div>
</section>