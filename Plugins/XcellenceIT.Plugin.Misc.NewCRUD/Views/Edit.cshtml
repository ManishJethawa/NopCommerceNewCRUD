@model NewCRUDModel
@{
    //page title
    ViewBag.PageTitle = T("Plugins.Misc.NewCRUD.Edit.User").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Users List");
}
@{
    Layout = "_AdminLayout";
}
<form asp-controller="NewCRUD" asp-action="Edit" method="post" id="category-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Misc.NewCRUD.Edit.User") - @Model.FirstName @Model.LastName
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Misc.NewCRUD.BackToUserList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="user-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Misc.NewCRUD/Views/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="user-delete" />